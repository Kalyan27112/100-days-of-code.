#include <stdio.h>
int main() {
    int A[2][2], B[2][2], C[2][2] = {0};
    printf("Enter elements of 1st 2x2 matrix:\n");
    for (int i=0; i<2; i++)
      for (int j=0; j<2; j++)
        scanf("%d", &A[i][j]);
    printf("Enter elements of 2nd 2x2 matrix:\n");
    for (int i=0; i<2; i++)
      for (int j=0; j<2; j++)
        scanf("%d", &B[i][j]);

    for (int i=0; i<2; i++) {
        for (int j=0; j<2; j++) {
            for (int k=0; k<2; k++) {
                C[i][j] += A[i][k] * B[k][j];
            }
        }
    }
    printf("Product matrix:\n");
    for (int i=0; i<2; i++) {
        for (int j=0; j<2; j++) {
            printf("%d ", C[i][j]);
        }
        printf("\n");
    }
    return 0;
}
